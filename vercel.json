{
    "version": 2,
    "builds": [
        { "src": "api.py", "use": "@vercel/python" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "api.py" }
    ],
    "build": {
        "commands": ["sh vercel_build.sh"],
        "env": {
            "PYTHONUNBUFFERED": "1"
        }
    }
}

