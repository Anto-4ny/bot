{
    "version": 2,
    "builds": [
        { "src": "api.py", "use": "@vercel/python" },
        { "src": "server.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "api.py" },
        { "src": "/(.*)", "dest": "server.js" }
    ],
    "build": {
        "commands": [
            "pip install -r requirements.txt",
            "bash playwright_startup.sh",
            "sh vercel_build.sh"
        ],
        "env": {
            "PYTHONUNBUFFERED": "1"
        }
    }
}
